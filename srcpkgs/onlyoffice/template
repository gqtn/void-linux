### Template for OnlyOffice

pkgname=onlyoffice
version=
revision=1

archs="x86_64"
depdends="libstdc++ curl xdg-utils dejavu-fonts-ttf GConf"
hostmakedepends="tar xz"

short_desc="Editor suite"
license="AGPL-3.0"
homepage="https://www.onlyoffice.com/"
nostrip=yes

distfiles="https://github.com/ONLYOFFICE/DesktopEditors/releases/download/v/onlyoffice-desktopeditors_amd64.deb"
checksum=0019dfc4b32d63c1392aa264aed2253c1e0c2fb09216f8e2cc269bbfb8bb49b5


### Script
do_extract() {
        mkdir -p ${DESTDIR}
        ar x ${XBPS_SRCDISTDIR}/${pkgname}-/onlyoffice-desktopeditors_amd64.deb
}

do_install() {
        tar xf data.tar.xz -C ${DESTDIR}

}
